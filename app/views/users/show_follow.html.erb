<h3><%= @title%></h3>
<% if @users.count === 0 %>
 <p>ユーザーはいません</p>
<% else %>
<table class="table table-hover table-inverse">
    <thead>
     <tr>
      <th>image</th>
      <th>name</th>
      <th></th>
      <th></th>
      <th></th>
     </tr>
    </thead>
    <% @users.each do |user|%>
    <tbody>
     <tr>
       <td>
        <%= attachment_image_tag user, :profile_image, fallback:"no_image.jpg", size:"40x40"%>
       </td>
       <td><%= user.name %></td>
       <td>フォロー数：<%= user.following.count%></td>
       <td>フォロワー数：<%= user.followers.count%></td>
       <td><%= link_to "Show",user_path(user)%></td>
     </tr>
  <% end %>
  </tbody>
</table>
<% end %>